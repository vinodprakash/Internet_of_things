<div class="row">
  <div class="small-2 large-6 columns">
<h1>Listing mobiles</h1>

<table>
  <thead>
    <tr>
      <th>Mobile Id</th>
      <th>Name</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    
    <% @dbdata.each do |mobile| %>
      <tr>
        <td><%= mobile.id %></td>
        <td><%= mobile.name %></td>

       
       
        <td><%= link_to 'Destroy', mobile, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-mini btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
Search :
<%= form_tag({:controller=>"db", :action=>"list"}, method: :get) do %>
  <%= number_field_tag :id %>
  <%= submit_tag 'Search id', name: nil %>
<% end %>





</div>
</div>
